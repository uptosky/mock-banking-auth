{
  "name": "mock-banking-auth",
  "version": "0.1.0",
  "description": "Authentication api for Mock Banking API",
  "scripts": {
    "start": "npm run serve",
    "start-sharp": "rm -rf node_modules/sharp && npm install --arch=x64 --platform=linux sharp && npm run serve",
    "start-sharp2": "rm -rf node_modules/sharp && npm install sharp && npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon --delay 1 dist/server.js | bunyan -o short",
    "watch": "npm run copy-static-assets && concurrently -r \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "cross-env NODE_ENV=test jest",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "deploy": "npm run build & gcloud app deploy --quiet",
    "swagger": "swagger-jsdoc.js -d src/swagger/swaggerDef.js src/routes/index.js",
    "test-converage": "npm run test -- --coverage"
  },
  "pre-commit": [
    "tslint",
    "test"
  ],
  "author": "Danny Oh",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "auth0": "^2.17.1",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.5.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.1",
    "http-errors": "^1.7.1",
    "jsonwebtoken": "^8.4.0",
    "jwks-rsa": "^1.3.0",
    "jwt-decode": "^2.2.0",
    "moment-timezone": "^0.5.23",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/auth0": "^2.9.14",
    "@types/body-parser": "^1.16.8",
    "@types/bunyan": "^1.8.5",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/hapi__joi": "^15.0.1",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.91",
    "@types/moment-timezone": "^0.5.10",
    "@types/morgan": "^1.7.35",
    "@types/nock": "^10.0.3",
    "@types/node": "^9.4.6",
    "@types/request": "^2.47.0",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.9.0",
    "@types/winston": "^2.3.7",
    "axios-mock-adapter": "^1.16.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "jest": "^24.0.0",
    "jest-cli": "^23.6.0",
    "nock": "^10.0.6",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.9",
    "pre-commit": "^1.2.2",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.9.1",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": "10.x.x"
  }
}
