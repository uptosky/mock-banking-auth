{
  "name": "mock-banking-auth",
  "version": "0.1.0",
  "description": "Authentication api for Mock Banking API",
  "scripts": {
    "start": "npm run serve",
    "start-sharp": "rm -rf node_modules/sharp && npm install --arch=x64 --platform=linux sharp && npm run serve",
    "start-sharp2": "rm -rf node_modules/sharp && npm install sharp && npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon --delay 1 dist/server.js | bunyan -o short",
    "watch": "npm run copy-static-assets && concurrently -r \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "cross-env NODE_ENV=test jest",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "deploy": "npm run build & gcloud app deploy --quiet",
    "swagger": "swagger-jsdoc.js -d src/swagger/swaggerDef.js src/routes/index.js",
    "test-converage": "npm run test -- --coverage"
  },
  "pre-commit": [
    "tslint",
    "test"
  ],
  "author": "Danny Oh",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "auth0": "^2.20.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.5.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.6.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.19",
    "moment-timezone": "^0.5.27",
    "morgan": "^1.9.1",
    "uuid": "^3.3.3",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "@types/async": "^3.0.3",
    "@types/auth0": "^2.9.23",
    "@types/body-parser": "^1.17.1",
    "@types/bunyan": "^1.8.6",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.3",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.149",
    "@types/moment-timezone": "^0.5.12",
    "@types/morgan": "^1.7.37",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.12.14",
    "@types/request": "^2.48.3",
    "@types/shelljs": "^0.8.6",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^12.0.1",
    "@types/winston": "^2.4.4",
    "axios-mock-adapter": "^1.17.0",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "nock": "^11.7.0",
    "node-mocks-http": "^1.8.0",
    "nodemon": "^2.0.1",
    "pre-commit": "^1.2.2",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.3",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "engines": {
    "node": "10.x.x"
  }
}
